{
  "name": "cloudretail",
  "version": "1.0.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "format": "prettier --ignore-unknown --write .",
    "prepare": "husky",
    "start": "npm-run-all --parallel ws:api:start ws:ui:start",
    "ws:api:start": "npm -w apps/api run start",
    "ws:ui:start": "npm -w apps/ui run start"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3"
  }
}
